<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%d{yyy-MM-dd HH:mm:ss.SSS}] %p %c - %m%n</pattern>
    </encoder>
  </appender>

  <logger name="com.orctom.rmq.DummyConsumer" level="trace" additivity="false">
    <appender-ref ref="stdout"/>
  </logger>

  <logger name="com.orctom.rmq.RMQTest" level="trace" additivity="false">
    <appender-ref ref="stdout"/>
  </logger>

  <root level="warn">
    <appender-ref ref="stdout"/>
  </root>
</configuration>